-# = @reports.inspect
%table.reports
  %thead
    %th
    %th{:width => "60%"} Report
    %th Completed
    %th Actions
  %tbody
    - for report in @reports do
      %tr
        %td.status
          - if report.completed?
            W
          - elsif report.processing?
            N
          - elsif report.failed?
            c
          - elsif report.killed?
            ❌
        %td
          %strong= report.title
          for last week
          %em 6/12/11 – 6/19/11
        %td
          %strong= report.completed_at || report.created_at
          today
        - if report.queued?
          %td= link_to "Cancel", report_path(report), :class => "button cancel", :target => "_blank"
        - elsif report.failed?
          %td= link_to "Retry", report_path(report), :class => "button retry", :target => "_blank"
        - else
          %td= link_to "View", report_path(report), :class => "button view", :target => "_blank"
